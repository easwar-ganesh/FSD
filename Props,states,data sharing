import React, { useState } from "react";

function Child({ parentMessage, sendToParent }) {
  const childMsg = "Hello Parent! Message from Child.";

  return (
    <div>
      <h3>Child Component</h3>
      <p>Parent says: {parentMessage}</p>
      <button onClick={() => sendToParent(childMsg)}>
        Send Message to Parent
      </button>
    </div>
  );
}

function App() {
  const [childMessage, setChildMessage] = useState("");
  const parentMessage = "Hello Child! Message from Parent.";

  const receiveFromChild = (msg) => {
    setChildMessage(msg);
  };

  return (
    <div>
      <h2>Parent Component</h2>
      <p>Child says: {childMessage}</p>
      <Child 
        parentMessage={parentMessage}
        sendToParent={receiveFromChild}
      />
    </div>
  );
}

export default App;
